    public static void switchLevels()
    {
        levelCount++;
        //SET NOTS
        notLogic1 = false;
        notLogic2 = false;
        notLogic3 = false;
        notLogic4 = false;
        notLogic5 = false;
        notLogic6 = false;
        notLogic7 = false;
        
        //SET BUTTONS
        butLogic1 = false;
        butLogic2 = false;
        butLogic3 = false;
        butLogic4 = false;
        
        //SET GATES, NOTS, AND BUTTONS
        /*TEST LEVEL
        if(levelCount == 2)//SHOW OFF ALL NOTS LEVEL; not actually going in game
        {
            //butLogic1 = true;
            //butLogic2 = true;
            //butLogic3 = true;
            //butLogic4 = true;
            
            notLogic5 = true;
            //notLogic6 = true;
            //notLogic7 = true;
            
            gateType1 = 0;//AND
            gateType2 = 0;//AND
            gateType3 = 0;//AND
        }
        */
        //Levels are in order starting at 2
        
        if(levelCount == 2)//ANDS AND NOTS; Level 2
        {
            notLogic1 = true;//NOT FOR BUTTON 1
            
            gateType1 = 0;//AND
            gateType2 = 0;//AND
            gateType3 = 0;//AND
        }      
        
        else if(levelCount == 3)//START OR; Level 3
        {
            gateType1 = 1;//OR
            gateType2 = 1;//OR
            gateType3 = 0;//AND
        }
        else if(levelCount == 4)//ORS AND NOTS; Level 4
        {
            butLogic2 = true;
            notLogic2 = true;//NOT FOR BUTTON 2
            notLogic3 = true;//NOT FOR BUTTON 3
            butLogic3 = true;
            
            gateType1 = 1;//OR
            gateType2 = 1;//OR
            gateType3 = 0;//AND
        }
        else if(levelCount == 5)//NAND LOGIC; Level 5
        {
            butLogic1 = true;
            butLogic2 = true;
            butLogic3 = true;
            butLogic4 = true;
            
            gateType1 = 0;//AND
            gateType2 = 1;//OR
            gateType3 = 2;//NAND
        }
        else if(levelCount == 6)//FINISH NAND; Level 6
        {
            butLogic1 = true;
            butLogic2 = true;
            
            gateType1 = 2;//NAND
            gateType2 = 1;//OR
            gateType3 = 0;//AND
        }
        else if(levelCount == 7)//START NOR; Level 7
        {
            butLogic1 = true;
            butLogic2 = true;
            butLogic4 = true;
            
            notLogic3 = true;
            
            gateType1 = 0;//AND
            gateType2 = 1;//OR
            gateType3 = 3;//NOR
        }
        else if(levelCount == 8)//FINISH NOR; Level 8
        {
            butLogic3 = true;
            butLogic4 = true;
            
            notLogic2 = true;
            
            gateType1 = 3;//NOR
            gateType2 = 2;//NAND
            gateType3 = 0;//AND
        }
        else if(levelCount == 9)//START XOR; Level 9
        {
            gateType1 = 0;//AND
            gateType2 = 1;//OR
            gateType3 = 4;//XOR
        }
        else if(levelCount == 10)//FINISH XOR; Level 10
        {
            butLogic2 = true;
            
            gateType1 = 4;//XOR
            gateType2 = 2;//NAND
            gateType3 = 3;//NOR
        }
        else if(levelCount < 10)
        {
            gateType1 = 0;
            gateType2 = 0;
            gateType3 = 0;
            System.out.println("temp level");
        }
        else//reset game
        {
            gateType1 = 0;
            gateType2 = 0;
            gateType3 = 0;
            
            //gameover
            System.out.println("yay");
            levelCount = 1;
        }
        
        
        updatePowers();
        levelDisplay.setText("Level: " + levelCount);
    }
    
    public static String typeTo(int n)
    {
        if(n == 0)
        {
            return "AND";
        }
        else if(n == 1)
        {
            return "OR";
        }
        else if(n == 2)
        {
            return "NAND";
        }
        else if(n == 3)
        {
            return "NOR";
        }
        else if(n == 4)
        {
            return "XOR";
        }
        String s = "WRONG THINGY DUDE";
        return s;
    }
    
    public static String powerTest(boolean b)
    {
        if(b)
        {
            return "ON";
        }
        return "OFF";
    }
}
